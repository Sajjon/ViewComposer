// MARK: - CustomStringConvertible for Enums
{% for type in types.implementing.AutoCustomStringConvertible|enum %}
	// MARK: - {{ type.name }} CustomStringConvertible
	extension {{ type.name }}: CustomStringConvertible {
		var description: String {
			switch self {
				{% for case in type.cases %}
					{% if case.hasAssociatedValue %}
						case .{{ case.name }}(let value):
							return "{{ case.name }}: \(value)" 
					{% else %} 
						case .{{ case.name }}:
							return "{{ case.name }}" 
					{% endif %}
				{% endfor %}
			}
		}
	}
{% endfor %}
